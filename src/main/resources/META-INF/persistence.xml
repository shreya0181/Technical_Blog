<?xml version="1.0"?>

        <persistence version="2.1" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/persistence">


    <persistence-unit name="sampleapp" transaction-type="RESOURCE_LOCAL" >

    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>


    <properties>

    <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>

    <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/inheritdemo"/>

    <property name="javax.persistence.jdbc.user" value="postgres"/>

    <property name="javax.persistence.jdbc.password" value="shrey"/>
    <property name="hibernate.hbm2ddl.auto" value="create"/>

    <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>

    <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL82Dialect" />



</properties>

</persistence-unit>

</persistence>
